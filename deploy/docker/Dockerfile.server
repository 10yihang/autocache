# Build the server binary
FROM docker.1ms.run/library/golang:1.24 AS builder

WORKDIR /workspace
COPY go.mod go.mod
COPY go.sum go.sum
RUN go mod download

COPY cmd/ cmd/
COPY api/ api/
COPY internal/ internal/
COPY pkg/ pkg/

# Build
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o autocache cmd/server/main.go

FROM gcr.nju.edu.cn/distroless/static:nonroot
WORKDIR /
COPY --from=builder /workspace/autocache .
USER 65532:65532

ENTRYPOINT ["/autocache"]
